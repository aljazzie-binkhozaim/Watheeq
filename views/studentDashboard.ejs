<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="./styles/s-home-global.css" />
  <link rel="stylesheet" href="./styles/s-home.css " />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Catamaran:wght@700&display=swap" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Source Sans 3:wght@400;600&display=swap" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Noto Sans:wght@400&display=swap" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Outfit:wght@700&display=swap" />
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />

    <link rel="icon" href="./images/favicon.ico">

    <style>
      .test-card{
        background-color: #6761ac;
        width: 90%;
        padding: .4rem;
        margin: 1rem auto;
        display: flex;
        border-radius: .4rem;
        font-size: .9rem;
        flex-direction: column;
        justify-content: center;
        margin-bottom: .8rem;
      }
     
    </style>
</head>

<body>

  <div class="sidebar" id="mySidebar">
    <button class="openbtn icon" onclick="myFunction() ">&#9776;</button>
    <a href="#"><b class="watheeq">Watheeq</b></a>
    <img class="watheeq-logo-icon" alt="" src="./images/watheeq-icon.png" />

    <div class="nav-bttn">
      <a class="take-test" id="takeTest"><span class="material-symbols-outlined">
          edit_square
        </span>Take test</a>
      <!-- <img class="group-icon" alt="" src="./public/create-test-icon.png" /> -->
    </div>

    <div class="nav-bttn">
      <a class="grades2" href="/studentGrades"><span class="material-symbols-outlined">
          rule
        </span>Grades</a>
      <!-- <img class="icon-task-square" alt="" src="./public/grades-icon.png" /> -->
    </div>

    <div class="nav-bttn">
      <a class="log-out" href="/logout"><span class="material-symbols-outlined">
          logout
        </span>Log out</a>
      <!-- <img class="icon-logout" src="./public/logout-icon.png" alt=""> -->
    </div>

    
  </div>

  <div class="main" id="myMain">
    <div class="contant">
      <div class="upcoming-box">
        <div class="upcoming-rectangle"></div>
        <div class="upcoming">COMPLETED</div>
      </div>
      <div class="completed-box">
        <div class="completed-rectangle"></div>
        <div class="completed">UPCOMING</div>
      </div>
      <div class="left-contant">
        <div class="completed-tall-rectangle">
          <% if(upcomingTests) {%>
          <% upcomingTests.forEach(test =>{ %>

            <div class="test-card" >
              <p style="margin: 0px;"><strong>Test Name .</strong> <span> <%= test.title %></span></p>
              <div style="margin: 10px 0px;"><strong>Test Date . </strong> <small> <%= test.testDate %></small></div>
              <div style="margin: 0px;"><strong>Description . </strong> <small> <%= test.description %></small></div>

            </div>
        <%  })  %>
         <%}%>
        
        </div>






        <!-- <div class="completed-small-rectangle1"></div> -->

        <!-- <div class="test-name-completion-container">
          <span class="test-name-completion-container1">
            <p class="test-name1">[Test Namedd]</p>
            <p class="Completion-name1">[Completion Date]ddd</p>
          </span>
        </div> -->





        <!-- <div class="contant-rectangle2"></div>
        <div class="test-name-completion-container2">
          <span class="test-name-completion-container1">
            <p class="test-name2">[Test Name]sds</p>
            <p class="Completion-name2">[Completion Date]ffff</p>
          </span>
        </div> -->
      




        

      </div>




      <div class="raight-contant">

        <div class="Upcoming-tall-rectangle">
            <% if(completedTests) {%>
            <% completedTests.forEach(test =>{ %>
  
              <div class="test-card" >
                <p style="margin: 0px;"><strong>Test Name .</strong> <span> <%= test.examTitle %></span></p>
                <div style="margin: 10px 0px;"><strong>Test Date . </strong> <small> <%= test.examDate %></small></div>
                <div style="margin: 0px;"><strong>Description . </strong> <small> <%= test.testDescription %></small></div>

              </div>
          <%  })  %>
           <%}%>
          
  
        </div>

       
      </div>



    </div>




    <div id="testCodePopup" class="popup-overlay" style="display: none">
      <div class="testcode">
        <form action="/enterTest" method="post">
          <label class="enter-test-code">enter test code</label>
          <input required type="text" class="testcode-child" name="accessCode" placeholder="Enter Your Test AccessCode ..." style="padding: .4rem .8rem;">
          <br><br>
          <!-- <b class="enter-test-code">enter test code</b> -->
          <button type="submit" class="btnStart" >start</button>
        </form>
      </div>
    </div>
  </div>




  <script src="./scripts/s-home.js"></script>
  <script>
    window.watsonAssistantChatOptions = {
      integrationID: "ba61ac50-b209-44b3-a58c-8a1f27f96afb", // The ID of this integration.
      region: "eu-de", // The region your integration is hosted in.
      serviceInstanceID: "0f987110-4a4b-45e3-b66a-441d97354c96", // The ID of your service instance.
      onLoad: async (instance) => { await instance.render(); }
    };
    setTimeout(function(){
      const t=document.createElement('script');
      t.src="https://web-chat.global.assistant.watson.appdomain.cloud/versions/" + (window.watsonAssistantChatOptions.clientVersion || 'latest') + "/WatsonAssistantChatEntry.js";
      document.head.appendChild(t);
    });
  </script>
</body>

</html>